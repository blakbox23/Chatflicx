<div class ="home-side">
<div class = "home-side-header">
  WHO TO FOLLOW
</div>

<div class = "users-list  ">

<% current_user.users_to_follow.each do |follower|%>
 <div class = "user d-flex">

  <div class = "user-img-container">
     <%= check_pic(follower)%>
  </div>

  <div class = "user-txt m-1 ">
    <p class="follower_fullname"><%= link_to follower.fullname, user_path(follower.id) %></p>

    <p class="follower_username"><%= follower.username%></p>
  </div>

  <div class = "ms-auto">
  <%= button_to("Follow", {controller: 'followings', action: 'create', friend_id: follower.id}, method: :post)%> 
  </div>
 
  </div>
  
  <%end%>

</div>


</div>