<div class ="home-side">

  <div class = "user-profile border">

  <div class = "profile-photo">
  <%if @user.photo.attached?%>
  <%= image_tag(@user.photo, class: "rounded-circle") %> 
  <%else%>
    <img src="data:image/svg+xml;base64," />
  <%end%>

  <p class= "profile-text "><%= @user.fullname%><p>

  <%if current_user != @user%>
  <%if current_user.users_to_follow.include?(@user)%>
  <%= button_to("Follow", {controller: 'followings', action: 'create', friend_id: @user.id}, method: :post)%>
  <%else%>
  <%= button_to("Unfollow", {controller: 'followings', action: 'destroy', friend_id: @user.id}, method: :delete)%>
  <%end%>
  
  <%end%>

  </div>


</div>
<div class="user-stats d-flex justify-content-around">
  <div class=" stat">
  <p class =" stat-num"><%= @user.opinions.count %></p>
  <p class="stat-txt">Posts</p>
  </div>
  <div class=" stat">
  <p class =" stat-num"><%= @user.followings.count %></p>
  <p class="stat-txt">Following</p>
  </div>
  <div class="stat">
  <p class =" stat-num"><%= @user.followers.count %></p>
  <p class="stat-txt">Followers</p>
  </div>
</div>

<div class = "home-side-header">
  FOLLOWED BY
</div>


<div class = "users-list  ">

<% @user.followers.each do |follower|%>
 <div class = "user d-flex">

  <div class = "user-img-container">
  <%if follower.photo.attached? %>
  <%= image_tag(follower.photo, class: "rounded-circle") %> 
  <%else%>
  <img src="data:image/svg+xml;base64," />
 <%end%>
  </div>

  <div class = "user-txt m-1 ">
    <p class="follower_fullname"><%= link_to follower.fullname, user_path(follower.id) %></p>

    <p class="follower_username"><%= follower.username%></p>
  </div>
 
  </div>
  
  <%end%>

</div>


</div>